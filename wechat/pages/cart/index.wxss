.container {
  display: flex;
  height: 100%;
  align-items: center;/*垂直居中*/
  justify-content: center;/*水平居中*/
  background-color: #F2f2f2;
  color: #939393;
}
.container .cart-image {
  width: 100%;
  height:100%;
}
.tips{
  color: #939393;
  text-align: center;
}
.buy{
  width:100%;
  position:fixed;
  bottom:0;
}
.item{
  display: flex;
  padding: 2%;
  background: #fff;
}
.name{
  width: 30%;
  font-family: "微软雅黑";
  color:#000;
  font-size: 12px;
  padding: 1%;
}
.operate{
  width: 30%;
  display: flex;
  padding-left: 1%;
  align-items: center;
}
.operate button{
  width: 10%;
  height: 30px;
  vertical-align: center;
}
.operate input{
  text-align: center;
}
.item image{
  width: 120rpx;
  height: 120rpx;
}
.sum{
  color:red;
  padding-left: 1%;
  align-self: center;
}